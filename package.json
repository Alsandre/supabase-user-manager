{
  "name": "@user/user-manager",
  "version": "0.1.0",
  "description": "Reusable TypeScript library for Supabase user management",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test-app": "vite --config test-app/vite.config.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "supabase",
    "authentication",
    "user-management",
    "typescript",
    "session-management"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.6.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0"
  },
  "peerDependencies": {
    "@supabase/supabase-js": "^2.0.0"
  }
}
